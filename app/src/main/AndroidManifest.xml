<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.smart_cam">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Smart Cam"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Smart_cam"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="elephant_alert_channel" />

        <activity
            android:name="com.example.smart_cam.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.smart_cam.DashboardActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.AddReportingActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.ReportingOptionsActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.OtherReportingActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.SolarFenceActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.VillageSelectionActivity"
            android:exported="false" />

        <activity
            android:name="com.example.smart_cam.ReportVillageActivity"
            android:exported="false" />

        <service
            android:name="com.example.smart_cam.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>