<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="25dp"
    card_view:cardElevation="6dp"
    android:background="@color/card_background"
    card_view:cardBackgroundColor="@color/card_background"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/alertIcon"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/baseline_warning_24" />

            <TextView
                android:id="@+id/alertTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Elephant Sighting"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/alertStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/status_pending_background"
                android:text="Pending"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/brown"
                android:textStyle="bold"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/alertDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Herd of elephants near Bandipur village perimeter"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/baseline_location_on_24" />

                <TextView
                    android:id="@+id/alertLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bandipur Village"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/baseline_access_time_24" />

                <TextView
                    android:id="@+id/alertTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:52 PM, Mar 20"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/alertSeverity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Severity: High"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/alertAttendedUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attended by User: Major Shrusti G Kamath"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="start">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAttendAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:background="@drawable/btn_green"
                    android:padding="8dp"
                    android:text="Attend Alert"
                    android:textAllCaps="false"
                    android:textColor="@color/green"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnResolveAlert"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:padding="8dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_blue"
                    android:textColor="@color/blue"
                    android:textAllCaps="false"
                    android:text="Mark as Resolved" />

                <Button
                    android:id="@+id/btnViewLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="View Location"
                    android:textColor="@color/red"
                    android:textAllCaps="false"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackground"
                    android:layout_marginBottom="8dp"/>



            </GridLayout>

        </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>
